{
  "name": "react-native-conceal-crypto",
  "version": "0.2.7",
  "description": "Crypto utilities for Conceal implemented in native C++ using Nitro JSI.",
  "main": "src/index.ts",
  "react-native": "src/index.ts",
  "types": "src/index.d.ts",
  "scripts": {
    "nitrogen:init": "npx nitrogen && node scripts/fix-visibility.js",
    "clean": "npx nitrogen clean && cd android && ./gradlew clean",
    "test": "jest",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "check": "biome check --write",
    "check:cpp": "clang-format --dry-run --Werror cpp/**/*.cpp nitrogen/generated/**/*.cpp && echo Check complete!",
    "format:cpp": "clang-format -i 'cpp/**/*.{cpp,hpp,c,h}' 'nitrogen/generated/**/*.{cpp,hpp,h}'"
  },
  "keywords": [
    "react-native",
    "nitro",
    "jsi",
    "conceal",
    "crypto",
    "c++"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Acktarius/react-native-conceal-crypto"
  },
  "bugs": {
    "url": "https://github.com/Acktarius/react-native-conceal-crypto/issues"
  },
  "license": "MIT",
  "author": "Acktarius <acktarius@protonmail.com> (https://github.com/Acktarius)",
  "homepage": "https://github.com/Acktarius/react-native-conceal-crypto#readme",
  "devDependencies": {
    "@biomejs/biome": "^2.2.6",
    "@types/react": "^19.1.0",
    "clang-format": "^1.8.0",
    "nitrogen": "^0.30.2",
    "react-native": "0.82.0",
    "react-native-nitro-modules": "^0.30.2",
    "typescript": "^5.5.0"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*",
    "react-native-nitro-modules": "^0.30.2"
  },
  "files": [
    "cpp/",
    "src/",
    "android/",
    "ios/",
    "nitrogen/generated/",
    "ConcealCrypto.podspec",
    "package.json",
    "README.md",
    "react-native.config.js",
    ".npmrc"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "overrides": {
    "ip": "^2.0.1",
    "tmp": "^0.2.3"
  }
}
